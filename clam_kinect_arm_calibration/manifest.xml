  <depend package="visualization_msgs"/>
  <depend package="tf"/>
  <depend package="eigen"/>
  <depend package="opencv2"/>
  <depend package="image_geometry"/>
  <depend package="pcl"/>
  <depend package="pcl_ros"/>
  <depend package="image_transport"/>
  <depend package="cv_bridge"/>

</package>


